{
  "extends": "@paperwork/tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@paperwork/editor": ["../editor/src"],
      "@paperwork/editor/*": ["../editor/src/*"],
      "@paperwork/ui": ["../ui/src"],
      "@paperwork/ui/*": ["../ui/src/*"],
      "@paperwork/pdf-lib": ["../pdf-lib/src"],
      "@paperwork/pdf-lib/*": ["../pdf-lib/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
